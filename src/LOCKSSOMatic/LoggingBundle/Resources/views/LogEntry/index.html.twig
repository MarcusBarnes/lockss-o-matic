{% extends '::base.html.twig' %}

{% block body -%}
    <h1>LogEntry list</h1>

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>File</th>
                <th>Line</th>
                <th>Bundle</th>
                <th>Class</th>
                <th>Caller</th>
                <th>Level</th>
                <th>Message</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('log_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.file }}</td>
                <td>{{ entity.line }}</td>
                <td>{{ entity.bundle }}</td>
                <td>{{ entity.class }}</td>
                <td>{{ entity.caller }}</td>
                <td>{{ entity.level }}</td>
                <td>{{ entity.message }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('log_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
