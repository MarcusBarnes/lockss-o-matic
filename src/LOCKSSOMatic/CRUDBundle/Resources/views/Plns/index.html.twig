{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Plns list</h1>

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Propserver</th>
                <th>Propspath</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('plns_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.propServer }}</td>
                <td>{{ entity.propsPath }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('plns_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('plns_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('plns_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
