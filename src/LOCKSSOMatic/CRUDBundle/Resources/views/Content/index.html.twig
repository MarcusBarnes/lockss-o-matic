{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Content list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contentprovidersid</th>
                <th>Depositsid</th>
                <th>Ausid</th>
                <th>Url</th>
                <th>Title</th>
                <th>Size</th>
                <th>Dateaddedtoau</th>
                <th>Checksumtype</th>
                <th>Checksumvalue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('content_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.contentProvidersId }}</td>
                <td>{{ entity.depositsId }}</td>
                <td>{{ entity.ausId }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.size }}</td>
                <td>{% if entity.dateAddedToAu %}{{ entity.dateAddedToAu|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.checksumType }}</td>
                <td>{{ entity.checksumValue }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('content_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
