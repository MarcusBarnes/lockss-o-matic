{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Content list</h1>

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Title</th>
                <th>Size</th>
                <th>Datedeposited</th>
                <th>Checksumtype</th>
                <th>Checksumvalue</th>
                <th>Recrawl</th>
                <th>Verifiedfilesize</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('content_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.size }}</td>
                <td>{% if entity.dateDeposited %}{{ entity.dateDeposited|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.checksumType }}</td>
                <td>{{ entity.checksumValue }}</td>
                <td>{{ entity.recrawl }}</td>
                <td>{{ entity.verifiedFileSize }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('content_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
