{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ContentProviders</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Ipaddress</th>
                <td>{{ entity.ipAddress }}</td>
            </tr>
            <tr>
                <th>Hostname</th>
                <td>{{ entity.hostname }}</td>
            </tr>
            <tr>
                <th>Checksumtype</th>
                <td>{{ entity.checksumType }}</td>
            </tr>
            <tr>
                <th>Maxfilesize</th>
                <td>{{ entity.maxFileSize }}</td>
            </tr>
            <tr>
                <th>Maxausize</th>
                <td>{{ entity.maxAuSize }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('contentproviders') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('contentproviders_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
