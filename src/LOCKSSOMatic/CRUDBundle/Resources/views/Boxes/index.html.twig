{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Boxes list</h1>

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hostname</th>
                <th>Ipaddress</th>
                <th>Username</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('boxes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.hostname }}</td>
                <td>{{ entity.ipAddress }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.password }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('boxes_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('boxes_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('boxes_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
