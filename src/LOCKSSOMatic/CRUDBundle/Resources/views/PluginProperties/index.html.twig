{% extends '::base.html.twig' %}

{% block body -%}
    <h1>PluginProperties list</h1>

    <p>Showing {{ pagination|length }} records of {{ pagination.getTotalItemCount }}.</p>
    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Propertykey</th>
                <th>Propertyvalue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('pluginproperties_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.propertyKey }}</td>
                <td>{{ entity.propertyValue }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pluginproperties_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pluginproperties_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>        

    <ul>
        <li>
            <a href="{{ path('pluginproperties_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
